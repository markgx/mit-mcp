{
  "name": "mit-mcp",
  "version": "0.1.0",
  "main": "dist/index.js",
  "type": "module",
  "typings": "dist/index.d.ts",
  "bin": {
    "mit-mcp": "dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/markgx/mit-mcp.git"
  },
  "keywords": [
    "mcp"
  ],
  "author": "Mark Guerra <mark@markgx.dev>",
  "license": "MIT",
  "scripts": {
    "bundle": "rimraf dist && esbuild --outdir=dist --sourcemap --bundle --platform=node --target=node20.10.0 --format=esm --external:better-sqlite3 ./src/index.ts",
    "compile": "tsc",
    "compile:watch": "tsc -w",
    "dev": "nodemon --watch src --watch test --ext ts,json --exec 'npm run bundle && npm run start'",
    "debug": "npm run bundle && node --enable-source-maps --inspect-brk ./dist/index.js",
    "debug:test": "vitest --inspect-brk --run",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "start": "node --enable-source-maps ./dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@tsconfig/node22": "^22.0.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.0.4",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "@vitest/coverage-v8": "^2.1.8",
    "drizzle-kit": "^0.31.2",
    "esbuild": "^0.25.5",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-n": "^17.14.0",
    "nodemon": "3.1.10",
    "prettier": "3.5.3",
    "rimraf": "5.0.10",
    "typescript": "5.8.3",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.13.1",
    "better-sqlite3": "^12.1.1",
    "drizzle-orm": "^0.44.2",
    "zod": "^3.25.67"
  }
}
